{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/claim.schema.json",
  "title": "Verifiable Claim Schema",
  "type": "object",
  "required": ["claim_id", "statement", "status", "evidence"],
  "properties": {
    "claim_id": { "type": "string" },
    "statement": { "type": "string" },
    "status": { "type": "string", "enum": ["proposed", "accepted", "deprecated"] },
    "frame_tags": {
      "type": "array",
      "items": { "type": "string", "enum": ["Mirror", "Water", "Fire"] }
    },
    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["citation_id", "support_level"],
        "properties": {
          "citation_id": { "type": "string" },
          "support_level": { "type": "string", "enum": ["direct", "indirect", "inferential"] },
          "excerpt": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": true
}